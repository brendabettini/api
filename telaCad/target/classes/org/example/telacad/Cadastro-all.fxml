<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane style="-fx-background-color: #027313;" stylesheets="@css/cadastro.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.telacad.CadastroController">
    <children>
        <AnchorPane>
            <children>
                <AnchorPane layoutX="236.8" layoutY="48.0" prefHeight="446.0" prefWidth="402.0" style="-fx-background-color: #025920; -fx-background-radius: 25;" AnchorPane.bottomAnchor="32.0" AnchorPane.leftAnchor="237.0" AnchorPane.rightAnchor="263.0" AnchorPane.topAnchor="48.0" />
                <AnchorPane styleClass="form-pane" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="260.0" AnchorPane.rightAnchor="250.0" AnchorPane.topAnchor="30.0">
                    <children>
                        <VBox fx:id="formContainer" alignment="TOP_CENTER" maxWidth="450" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                            <children>
                                <Label styleClass="title-label" text="CRIAR UMA CONTA" />
                                <VBox alignment="TOP_LEFT" spacing="5.0">
                                    <children>
                                        <Label styleClass="field-label" text="Nome Completo" />
                                        <TextField fx:id="nomeField" styleClass="text-field" />
                                    </children>
                                </VBox>
                                <VBox alignment="TOP_LEFT" spacing="5.0">
                                    <children>
                                        <Label styleClass="field-label" text="E-mail Institucional" />
                                        <TextField fx:id="emailField" styleClass="text-field" />
                                    </children>
                                </VBox>
                                <VBox alignment="TOP_LEFT" spacing="5.0">
                                    <children>
                                        <Label styleClass="field-label" text="Curso" />
                                        <Button fx:id="cursoButton" maxWidth="1.7976931348623157E308" onAction="#handleCursoButton" styleClass="text-field" text="Selecione o curso" />
                                    </children>
                                </VBox>
                                <VBox alignment="TOP_LEFT" spacing="5.0">
                                    <children>
                                        <Label styleClass="field-label" text="Senha" />
                                        <TextField fx:id="senhaField" styleClass="text-field" />
                                    </children>
                                </VBox>
                                <VBox alignment="TOP_LEFT" spacing="5.0">
                                    <children>
                                        <Label styleClass="field-label" text="Confirmar Senha" />
                                        <TextField fx:id="confirmarField" styleClass="text-field" />
                                    </children>
                                </VBox>
                                <Button fx:id="confirmBtn" onAction="#confirmarCadastro" prefHeight="35" prefWidth="150" styleClass="confirm-button" text="Confirmar" />
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
                <Button onAction="#handleBackToLogin" prefHeight="33.0" prefWidth="95.0" styleClass="back-button" text="Voltar" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="26.0" />
            </children>
        </AnchorPane>

        <VBox fx:id="overlayPane" alignment="CENTER" style="-fx-background-color: rgba(0, 0, 0, 0.6);" visible="false" />

        <VBox fx:id="sucessoDialog" alignment="CENTER" maxHeight="200.0" maxWidth="450.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15;" visible="false">
            <children>
                <Label style="-fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 15px;" text="Conta criada com sucesso!" />
                <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginButton" styleClass="login-button" text="LOGIN" textFill="WHITE">
                    <padding>
                        <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
                    </padding>
                </Button>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>

        <VBox fx:id="cursoDialog" alignment="TOP_CENTER" maxHeight="420.0" maxWidth="450.0" spacing="15.0" styleClass="dialog-pane" visible="false">
            <children>
                <Label styleClass="title-label" text="Selecione seu curso" />
                <VBox spacing="10.0">
                    <children>
                        <fx:define>
                            <ToggleGroup fx:id="cursoToggleGroup" />
                        </fx:define>
                        <RadioButton text="Análise e Desenvolvimento de Sistemas" toggleGroup="$cursoToggleGroup" />
                        <RadioButton text="Banco de Dados" toggleGroup="$cursoToggleGroup" />
                        <RadioButton text="Desenvolvimento de Software Multiplataforma" toggleGroup="$cursoToggleGroup" />
                        <RadioButton text="Gestão da Produção Industrial" toggleGroup="$cursoToggleGroup" />
                        <RadioButton text="Gestão Empresarial" toggleGroup="$cursoToggleGroup" />
                        <RadioButton text="Logística" toggleGroup="$cursoToggleGroup" />
                        <RadioButton text="Manufatura Avançada" toggleGroup="$cursoToggleGroup" />
                        <RadioButton text="Manutenção de Aeronaves" toggleGroup="$cursoToggleGroup" />
                        <RadioButton text="Projetos de Estruturas Aeronáuticas" toggleGroup="$cursoToggleGroup" />
                    </children>
                </VBox>
                <Button onAction="#handleOkCursoButton" prefHeight="35.0" prefWidth="100.0" styleClass="confirm-button" text="OK" />
            </children>
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</StackPane>