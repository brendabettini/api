<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:controller="org.example.telacad.LoginController" styleClass="root" xmlns="http://javafx.com/javafx/24.0.2" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@css/login.css">
    <children>
        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="25.0">
            <children>
                <Label styleClass="title-label" text="GrowU." />
                <Label styleClass="subtitle-label" text="Conectando mentes, cultivando futuros" />
                <VBox alignment="TOP_CENTER" spacing="15.0" styleClass="login-form">
                    <children>
                        <Label styleClass="login-header" text="LOGIN" />
                        <VBox>
                            <children>
                                <Label text="E-mail Institucional" />
                                <TextField fx:id="emailField" promptText="seuemail@instituicao.com" />
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Senha" />
                                <PasswordField fx:id="passwordField" promptText="Sua senha" />
                            </children>
                        </VBox>
                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginAction" text="ENTRAR" />
                        <Hyperlink onAction="#handleGoToCadastro" text="Novo aqui? Criar uma conta"/>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>